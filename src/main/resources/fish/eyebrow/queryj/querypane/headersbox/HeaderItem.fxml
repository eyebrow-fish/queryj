<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<fx:root spacing="4.0" type="HBox" xmlns="http://javafx.com/javafx/16"
         xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
    <TextField fx:id="keyField" promptText="Key" HBox.hgrow="ALWAYS"/>
    <TextField fx:id="valueField" promptText="Value" HBox.hgrow="ALWAYS"/>
    <Button mnemonicParsing="false" onAction="#createNewHeader" text="+"/>
    <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeHeader" text="-"/>
</fx:root>
